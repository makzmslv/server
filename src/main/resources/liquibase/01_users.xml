<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet author="mk3" id="1">
        <!--                                 -->
        <!-- USERS -->
        <!--                                 -->
        <createTable tableName="USERS" remarks="USERS">
            <column name="ID" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="USERS_PK" nullable="false"/>
            </column>
            <column name="USERNAME" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="PASSWORD" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDRESS" type="VARCHAR(500)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="CONTACT_NO" type="DECIMAL(10, 0)">
                <constraints nullable="true"/>
            </column>
            <column name="VERIFIED" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="REGISTRATION_ID" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="LONGITUDE" type="DECIMAL(11, 8)">
                <constraints nullable="true"/>
            </column>
            <column name="LATITUDE" type="DECIMAL(10, 8)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
